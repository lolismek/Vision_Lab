<html>
<%- include('./partials/head.ejs'); %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<style>
    .custom-bg {
        background-color: #171719;
    }
    body {
        font-weight: bold;
        overscroll-behavior: contain;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    footer {
        margin-top: auto;
    }
    .custom-nav {
        background-color: #27272a;
    }
    .custom-warning {
        color: red;
    }
    .custom-text-area{
        background-color: #2d2d2d !important;
    }
    .custom-paragraph {
      color:  #b2b2b2;
    }
    .normal-text {
      font-weight: normal;
    }
</style>
<body class="p-4 mb-2 custom-bg text-light">
    <nav class="navbar navbar-expand-lg navbar-dark custom-nav rounded">
        <a class="navbar-brand px-4 pt-2" href="/"><img src="https://cdn.discordapp.com/attachments/340044077649100800/1109773467974377482/Screenshot_2023-05-21_at_12.22.55-removebg-preview.png" width="170" height="60" salt="Logo"></a>
        <div class="collapse navbar-collapse justify-content-end px-4">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Log out</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">About Us</a>
                </li>
            </ul>
        </div>
    </nav>

    <h2 class="pt-3">Create model</h2>
    <hr>

    <% if(_warn){ %>
        <p class="custom-warning"> <%= _warningMessage %> </p>
    <% } %>
    <form action="<%=link%>" method="POST">
        <label for="name"> Name </label>
        <br>
        <input type="text" name="name" class="box-content pb-2 custom-text-area text-light border-0 p-2 rounded" required>
        <div class="pt-3">
            <label for="learningRate"> Learning rate </label>
            <br>
            <small class="normal-text custom-paragraph">Between 0 and 1. For small to medium datasets we recommend a 0.01 learning rate.</small>
            <br>
            <input type="text" name="learningRate" class="box-content pb-2 custom-text-area text-light border-0 p-2 rounded" required>
        </div>

        <div class="pt-3">
            <label for="epochs"> Epochs </label>
            <br>
            <small class="normal-text custom-paragraph">Maximum 500 epochs</small>
            <br>
            <input type="text" name="epochs" class="box-content pb-2 custom-text-area text-light border-0 p-2 rounded" required>
        </div>

        <div class="pt-3">
            <label for="xparameters"> Choose values from which to predict </label>
            <br>
            <small class="normal-text custom-paragraph">Control/command + click</small>
            <br>
            <div class="row">
                <div class="col-auto">
                    <select name="xparameters" class="form-select text-light custom-text-area border-0" multiple required>
                        <% for(let option in options){ %>
                            <option value="<%=options[option]%>"><%=options[option]%></option>
                        <% } %>
                    </select>
                </div>
            </div>
        </div>
        <div class="pt-3">
            <label for="yparameters"> Choose predicted value </label>
            <br>
            <select name="yparameters">
                <% for(let option in options){ %>
                    <option value="<%=options[option]%>"><%=options[option]%></option>
                <% } %>
            </select>
        </div>
        <div class="pt-3">
            <button class="btn btn-primary">create</button>
        </div>
    </form>
    <hr>
    <small class="normal-text custom-paragraph">Stay tuned! This are our AI upcoming features &#128526;</small></p>
    <ul>
        <li><small class="normal-text custom-paragraph">Custom neural network arhitecture</small></li>
        <li><small class="normal-text custom-paragraph">Optimal hyperparameters search</small></li>
        <li><small class="normal-text custom-paragraph">Classification models</small></li>
        <li><small class="normal-text custom-paragraph">Image based learning</small></li>
        <li><small class="normal-text custom-paragraph">Text based learning</small></li>
    </ul>]   
    <%- include('./partials/footer.ejs'); %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>